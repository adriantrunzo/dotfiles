[user]
  name = Adrian Trunzo
  email = trunzoap@gmail.com

[core]
  editor = vim
  pager = delta

[delta]
  navigate = true

[diff]
  colorMoved = default

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[pull]
  ff = only

[push]
  autoSetupRemote = true

[submodule]
  recurse = true

[includeif "gitdir:~/slice/"]
  path = ~/slice/.gitconfig
